<h1>Edit Author</h1>

<% if @author.errors.any? %>
  <ul>
    <% @author.errors.full_messages.each do |error| %>
    <li><%= error %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @author do |f| %>
<p>
  <%= f.label :name %>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :birth_year %>
  <%= f.text_field :birth_year %>
</p>
  <%= f.submit %>
<% end %>
